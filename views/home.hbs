{{! ### Task list ### }}
<ol>
   {{#each tasks}}
      <li>{{title}}
         {{! ### Delete task button ### }}
         <form method='POST' action='/task/{{this.id}}/delete'>
            <button type='submit'>Remove task</button>
         </form><a href='/task/{{this.id}}/update'><button type='submit'>Update task</button></a></li>
   {{/each}}
</ol>

{{! ### New tasks form ### }}
<form action='/create-to-do-list-item' method='POST'>
   <input id='title-input' type='text' name='title' placeholder='Title' />
   <button>Create new task</button>
</form>