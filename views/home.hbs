{{! ### Task list ### }}
<ol>
   {{#each tasks}}
      <li><div class='task-item'><div class='task-title'>{{title}}</div>
            {{! ### Delete task button ### }}
            <form method='POST' action='/task/{{this.id}}/delete'>
               <button type='submit'>Remove task</button>
            </form><a href='/task/{{this.id}}/update'><button type='submit'>Update task</button></a>
         </div></li>
   {{/each}}
</ol>

{{! ### New tasks form ### }}
<form class='task-update' action='/create-to-do-list-item' method='POST'>
   <input id='title-input' type='text' name='title' placeholder='Title' />
   <button class='button-create'>Create new task</button>
</form>
